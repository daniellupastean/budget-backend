<html lang='en'>
  <head>
    <meta charset='UTF-8' />
    <title>Edit User</title>
    <link rel='stylesheet' type='text/css' href='/css/users/edit-styles.css' />
  </head>
  <body>
    <div class='container'>
      <h1>Edit User</h1>
      <form action='/users/update-user/{{user.id}}' method='post'>
        <label for='first-name'>First Name:</label>
        <input
          type='text'
          id='first-name'
          name='firstName'
          value='{{user.firstName}}'
        />
        <label for='last-name'>First Name:</label>
        <input
          type='text'
          id='last-name'
          name='lastName'
          value='{{user.lastName}}'
        />

        <label for='email'>Email:</label>
        <input type='email' id='email' name='email' value='{{user.email}}' />

        <button type='submit'>Update User</button>
      </form>
    </div>
  </body>
</html>